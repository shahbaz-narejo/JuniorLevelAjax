@model JuniorLevelAjax.Models.AddViewModel
@{
    Layout =null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.14.0-beta2/css/bootstrap-select.min.css" />
    <link href="https://cdn.datatables.net/1.11.3/css/dataTables.bootstrap4.min.css" rel="stylesheet" />



    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.14.0-beta2/js/bootstrap-select.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.inputmask/3.3.4/jquery.inputmask.bundle.min.js"></script>

</head>
<body>
    <div class="container">
        <div class="" style="margin-top:30px">
            <h2 class="modal-title text-center bg-info">Student Information</h2>
            <form class="form-horizontal" style="margin-top:30px">
                <div class="form-group row">
                    @Html.HiddenFor(model => model.S_id)
                    @Html.LabelFor(x => Model.S_name, new { @class = "control-label col-sm-2" })
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.S_name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.S_name, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(x => Model.Course_id, new { @class = "control-label col-sm-2" })
                    <div class="col-md-4">
                        @*@Html.DropDownListFor(x => Model.Course_id, new MultiSelectList(Model.CourseList, "Value", "Text"), new { @class = "form-control", @multiple = "multiple" })*@
                        @Html.ValidationMessageFor(x => x.Course_id, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(x => Model.Class_id, new { @class = "control-label col-sm-2" })
                    <div class="col-md-4">
                        @*@Html.DropDownListFor(x => Model.Class_id, new SelectList(Model.ClassList, "Value", "Text"), "Select Class", new { @class = "form-control" })*@
                        @Html.ValidationMessageFor(x => x.Class_id, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(x => Model.S_contact, new { @class = "control-label col-sm-2" })
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.S_contact, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.S_contact, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row" style="margin-left:19%">
                    <div class="col-sm-2">
                        <button id="btnSubmit" type="button" class="btn btn-success" style="width:100%">SUBMIT</button>
                    </div>
                    <div class="col-sm-2">
                        <button id="btnReset" type="button" class="btn btn-primary" style="width:100%">RESET</button>
                    </div>
                </div>
            </form>
        </div>

        <div style="margin-top:10px">
            <table id="Tblstudent" class="table table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>ID #</th>
                        <th>Name</th>
                        <th>Course</th>
                        <th>Class</th>
                        <th>Cell No.</th>
                        <th>Action</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
    <script src="~/Scripts/student.js"></script>
</body>
</html>
